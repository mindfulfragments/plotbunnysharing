<div class="booyah-box col-xs-10 col-xs-offset-1">
<h1>TITLE:</h1>
<p><%= @idea.title %></p>
<h1>SUMMARY:</h1>
<i><%= @idea.summary %></i>
<h1>PLOT:</h1>
<p><%= @idea.plot %></p>
<h1>CHARACTERS:</h1>
<p><%= @idea.characters %></p>
<h1>NOTES:</h1>
<p><%= @idea.notes %></p>
<div class="pull-left">
    <%= link_to 'Edit', edit_idea_path(@idea), class: 'btn btn-primary' %>
    <%= link_to 'Destroy', idea_path(@idea), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
  </div>
</div>